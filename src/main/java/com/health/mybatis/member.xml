<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.helath.mybatis">
	<select id="loginMember" resultType="MemberDto" parameterType="MemberDto">
		SELECT ID, PW FROM member
		WHERE ID = #{id} AND PW = #{pw}
		UNION ALL
		SELECT ID, PW FROM enterprise
		WHERE ID = #{id} AND PW = #{pw};
	</select>
	
	<insert id="insertMember" parameterType="MemberDto">
		insert into member values(
									seq_member.nextval,
									#{nickname}
									#{id},
									#{pw},
									#{name},
									#{birth},
									#{gender},								
									#{email},
									#{address},
									#{addressdetail},
									sysdate,
									#{profile},
									#{deleted},
									#{grade}							
									
								  )
	</insert>
	<insert id="insertEnterprise" parameterType="EnterpriseDto">
		insert into enterprise values (
														seq_enterprise,
														#{code},
														#{code},
														#{pw},
														#{name},
														#{profile},
														#{ceo},
														#{address},
														#{tel},
														#{acceptedDate},
														#{deletedDate},
														#{addressDetail}
													)
	</insert>
	<select id="idCheck" resultType="int" parameterType="String">
		select count(*) as count from member where id = #{id}
	</select>
	
</mapper>


















